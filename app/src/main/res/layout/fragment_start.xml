<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:backgroundTint="#F6F6F6"
    tools:context="com.example.declutteringapp.view.StartFragment">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="321dp"
        android:layout_height="81dp"
        android:layout_margin="20dp"
        android:layout_marginTop="56dp"
        android:background="@color/black"
        android:backgroundTint="#E8FCFF"
        android:gravity="center"
        android:padding="3dp"
        android:text="This is where you can start decluttering your space"
        android:textColor="#474040"
        android:textSize="18dp"
        android:textStyle="bold"
        app:circularflow_radiusInDP="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btnTipsStart"
        android:layout_width="137dp"
        android:layout_height="126dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:clickable="true"
        android:defaultFocusHighlightEnabled="false"
        android:focusable="true"
        android:foreground="@drawable/card_foreground"
        android:padding="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnSpacesStart"
        app:layout_constraintTop_toBottomOf="@+id/btnChallengesStart">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="61dp"
            android:layout_margin="40dp"
            android:src="@drawable/ic_bulb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Inspiration"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/qoutes"
        android:layout_width="206dp"
        android:layout_height="84dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="64dp"
        android:layout_marginTop="524dp"
        android:background="#FFFFFF"
        android:backgroundTint="#F1EDF1"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Decluttering quote of the day"
        android:textSize="17dp"
        app:circularflow_radiusInDP="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btnChallengesStart"
        android:layout_width="134dp"
        android:layout_height="124dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="180dp"
        android:clickable="true"
        android:defaultFocusHighlightEnabled="true"
        android:focusable="true"
        android:foreground="@drawable/card_foreground"
        android:padding="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnToolsStart"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="51dp"
            android:layout_margin="40dp"
            android:src="@drawable/ic_challenges" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Challenges"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnSpacesStart"
        android:layout_width="134dp"
        android:layout_height="128dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="332dp"
        android:clickable="true"
        android:defaultFocusHighlightEnabled="true"
        android:focusable="true"
        android:foreground="@drawable/card_foreground"
        android:padding="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="61dp"
            android:layout_margin="40dp"
            android:src="@drawable/ic_space" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Your Space"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnToolsStart"
        android:layout_width="134dp"
        android:layout_height="124dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="180dp"
        android:clickable="true"
        android:defaultFocusHighlightEnabled="true"
        android:focusable="true"
        android:foreground="@drawable/card_foreground"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:contentPadding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="61dp"
            android:layout_margin="40dp"
            android:src="@drawable/ic_tools" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tools"
            android:textColor="@color/black"
            android:textSize="17dp" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_marginBottom="140dp"

        android:src="@drawable/ic_qoutes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/qoutes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSpacesStart"
        app:layout_constraintVertical_bias="0.903" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="120dp"
        android:layout_height="154dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="472dp"
        app:layout_constraintStart_toEndOf="@+id/qoutes"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/ic_plant" />


</androidx.constraintlayout.widget.ConstraintLayout>